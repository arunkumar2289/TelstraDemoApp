<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/refreshButton"
        android:layout_marginTop="@dimen/activity_button_margin"
        android:layout_width="@dimen/activity_button_width"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_button_margin"
        android:text="@string/refresh_button"
        android:onClick="refreshListView"
        android:layout_height="@dimen/activity_button_height" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_below="@+id/refreshButton"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="@dimen/activity_progressbar"
        android:layout_height="@dimen/activity_progressbar"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
